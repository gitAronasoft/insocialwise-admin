use Illuminate\Support\Facades\DB;
$result = DB::select("SELECT table_name FROM information_schema.tables WHERE table_schema = 'public' AND table_type = 'BASE TABLE' ORDER BY table_name");
$tables = array_map(fn($t) => $t->table_name, $result);
echo count($tables) . " total tables found:\n";
foreach ($tables as $t) {
    echo "- $t\n";
}
