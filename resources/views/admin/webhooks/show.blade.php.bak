<script>
function webhookDetails() {
    return {
        showSecret: false,
        secret: '{{ $webhook->decrypted_secret ?? '' }}',
        maskedSecret: '{{ $webhook->masked_secret }}',
        notification: {
            show: false,
            type: 'success',
            message: ''
        },
        testModal: {
            show: false,
            loading: false,
            success: false,
            message: '',
            statusCode: null,
            response: null
        },

        showNotification(type, message) {
            this.notification = { show: true, type, message };
            setTimeout(() => {
                this.notification.show = false;
            }, 3000);
        },

        async copySecret() {
            try {
                await navigator.clipboard.writeText(this.secret);
                this.showNotification('success', 'Secret copied to clipboard');
            } catch (error) {
                this.showNotification('error', 'Failed to copy secret');
            }
        },

        async regenerateSecret() {
            if (!confirm('Are you sure you want to regenerate the webhook secret? This will invalidate the current secret.')) return;

            try {
                const response = await fetch(`/admin/webhooks/{{ $webhook->id }}/regenerate-secret`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').content
                    }
                });
                const data = await response.json();
                if (data.success) {
                    this.maskedSecret = data.masked_secret;
                    this.showNotification('success', data.message);
                    setTimeout(() => window.location.reload(), 1500);
                }
            } catch (error) {
                this.showNotification('error', 'Failed to regenerate secret');
            }
        },

        async testWebhook() {
            this.testModal = {
                show: true,
                loading: true,
                success: false,
                message: 'Sending test request...',
                statusCode: null,
                response: null
            };

            try {
                const response = await fetch(`/admin/webhooks/{{ $webhook->id }}/test`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').content
                    }
                });
                const data = await response.json();
                
                this.testModal = {
                    show: true,
                    loading: false,
                    success: data.success,
                    message: data.message,
                    statusCode: data.status_code,
                    response: data.response
                };
            } catch (error) {
                this.testModal = {
                    show: true,
                    loading: false,
                    success: false,
                    message: 'Failed to test webhook: ' + error.message,
                    statusCode: null,
                    response: null
                };
            }
        }
    }
}
</script>
